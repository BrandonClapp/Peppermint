@{ 
    Layout = "_Layout";
}

<div class="content-area">
    <!-- BREADCRUMBS -->
    <section class="page-section breadcrumbs">
        <div class="container">
            @*<div class="page-header">
                <h1>Blog Post Page</h1>
            </div>*@
            <ul class="breadcrumb">
                <li><a href="~/">Home</a></li>
                <li><a href="~/blog">Blog</a></li>
                <li><a href="~/blog/category/@Model.Post.Category.Slug">@Model.Post.Category.Name</a></li>
                <li class="active">@Model.Post.Title</li>
            </ul>
        </div>
    </section>
    <!-- /BREADCRUMBS -->

    <section class="page-section with-sidebar">
        <div class="container">
            <div class="row">

                @{ await Html.RenderPartialAsync("_Sidebar"); }

                <!-- CONTENT -->
                <div class="col-md-9 content" id="content">
                    <!-- Blog post -->
                    <article class="post-wrap post-single">
                        <div class="post-media">
                            <a href="~/assets/img/preview/blog/blog-post-1.jpg" data-gal="prettyPhoto"><img src="~/assets/img/preview/blog/blog-post-1.jpg" alt=""></a>
                        </div>
                        <div class="post-header">
                            <h2 class="post-title"><a href="#">@Model.Post.Title</a></h2>
                            <div class="post-meta">By <a href="/users/@Model.Post.User.UserName">@Model.Post.User.UserName</a> / @Model.Post.Created.ToString("dddd, MMMM dd yyyy") / in <a href="/blog/category/@Model.Post.Category.Slug">@Model.Post.Category.Name</a> / <a href="#">Share This Post</a></div>
                        </div>
                        <div class="post-body">
                            <p>@Html.Raw(Model.Post.Html)</p>
                        </div>
                    </article>
                    <!-- /Blog post -->
                    <!-- About the author -->
                    <div class="about-the-author clearfix">
                        <div class="media">
                            <img class="media-object pull-left" src="~/assets/img/preview/blog/avatar-author.jpg" alt="">
                            <div class="media-body">
                                <p class="media-category">@Model.Post.User.FirstName @Model.Post.User.LastName</p>
                                <h4 class="media-heading"><a target="_blank" href="http://twitter.com/@Model.Post.User.TwitterHandle">@@@(Model.Post.User.TwitterHandle)</a></h4>
                                <p>@Model.Post.User.Excerpt</p>
                            </div>
                        </div>
                    </div>
                    <!-- /About the author -->
                    <!-- PAGE -->
                    <section class="page-section">
                        <a class="btn btn-theme btn-title-more btn-icon-left" href="/blog"><i class="fa fa-file-text-o"></i>See All Posts</a>
                        <h2 class="block-title"><span>Related Posts</span></h2>
                        <div class="row">
                            @foreach (var post in Model.RelatedPosts)
                            {
                                <div class="col-md-4">
                                    <div class="recent-post alt">
                                        <div class="media">
                                            <a class="media-link" href="#">
                                                <img class="media-object" src="@post.Thumbnail" alt="">
                                                <i class="fa fa-plus"></i>
                                            </a>
                                            <div class="media-body">
                                                <h4 class="media-heading"><a href="/blog/@post.Slug">@post.Title</a></h4>
                                                <p class="media-category"><a href="/blog/category/@post.Category.Slug">@post.Category.Name</a></p>
                                                @post.GetExcerpt(95)
                                                <div class="media-meta">
                                                    @post.Created.ToString("MMMM dd yyyy")
                                                    <span class="divider">/</span><a href="#"><i class="fa fa-comment"></i>27</a>
                                                    <span class="divider">/</span><a href="#"><i class="fa fa-heart"></i>18</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </section>
                    <!-- /PAGE -->
                    <!-- PAGE -->
                    <section class="page-section no-padding-bottom">
                        @*<a class="btn btn-theme btn-title-more btn-icon-left" href="#"><i class="fa fa-file-text-o"></i>See All</a>*@
                        <h4 class="block-title"><span>Comments <span class="thin">(<a href="#disqus_thread"></a>)</span></span></h4>
                        <!-- Comments -->
                        <div id="disqus_thread"></div>
                        <script>

                            /**
